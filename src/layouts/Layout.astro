---
import '../styles/global.css';
import '@fontsource/anton';
import '@fontsource/archivo-narrow';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="it">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen flex flex-col md:flex-row bg-white">
        
        <!-- Sidebar: Minimal Vertical Strip (Desktop) -->
        <aside class="hidden md:flex flex-col justify-between w-24 h-screen fixed left-0 top-0 border-r-2 border-black bg-white z-50 py-12 items-center">
            <!-- Hamburger / Menu Icon -->
            <button id="menu-toggle-desktop" class="space-y-1.5 p-2 hover:bg-black hover:text-white transition-colors group border-2 border-transparent hover:border-black cursor-pointer">
                <span class="block w-8 h-1 bg-black group-hover:bg-white transition-all"></span>
                <span class="block w-8 h-1 bg-black group-hover:bg-white"></span>
                <span class="block w-8 h-1 bg-black group-hover:bg-white transition-all"></span>
            </button>

            <!-- Social / Links -->
            <div class="flex flex-col gap-6 text-sm font-bold mt-auto">
                 <a href="https://chiamamial.com" target="_blank" class="writing-vertical hover:bg-black hover:text-white px-2 py-4 transition-colors tracking-widest uppercase font-display text-xl">Chiamamial.com</a>
            </div>
        </aside>

        <!-- Mobile Header -->
        <nav class="md:hidden fixed top-0 left-0 right-0 h-16 bg-white border-b-2 border-black z-50 flex items-center justify-between px-6">
             <a href="/" class="text-3xl font-display uppercase tracking-tighter">Chiamamial</a>
             <button id="menu-toggle-mobile" class="space-y-1.5 p-2 cursor-pointer">
                <span class="block w-8 h-1 bg-black"></span>
                <span class="block w-8 h-1 bg-black"></span>
            </button>
        </nav>

        <!-- Fullscreen Menu Overlay -->
        <div id="fullscreen-menu" class="fixed inset-0 bg-black text-white z-[100] translate-x-full transition-transform duration-500 ease-in-out flex flex-col">
            <!-- Menu Header -->
            <div class="h-24 border-b border-white flex justify-between items-center px-6 md:px-12">
                <span class="font-mono text-xs uppercase tracking-widest">System_Menu / v1.0</span>
                <button id="menu-close" class="group flex items-center gap-2 cursor-pointer hover:text-orange-600 transition-colors">
                    <span class="font-mono text-xs uppercase hidden md:inline">CLOSE_MENU</span>
                    <div class="relative w-8 h-8 flex items-center justify-center border border-white group-hover:border-orange-600 transition-colors">
                        <span class="absolute w-6 h-0.5 bg-white group-hover:bg-orange-600 rotate-45 transition-colors"></span>
                        <span class="absolute w-6 h-0.5 bg-white group-hover:bg-orange-600 -rotate-45 transition-colors"></span>
                    </div>
                </button>
            </div>

            <!-- Menu Content -->
            <div class="flex-1 flex flex-col md:flex-row">
                <!-- Main Links -->
                <nav class="w-full md:w-2/3 border-r border-white flex flex-col justify-center p-12 gap-4">
                    <a href="/" class="text-6xl md:text-[8rem] font-display uppercase leading-[0.8] hover:text-orange-600 hover:translate-x-4 transition-all duration-300 menu-link">
                        Home
                    </a>
                    <a href="/" class="text-6xl md:text-[8rem] font-display uppercase leading-[0.8] hover:text-orange-600 hover:translate-x-4 transition-all duration-300 menu-link">
                        Guide
                    </a>
                    <a href="https://chiamamial.com" target="_blank" class="text-6xl md:text-[8rem] font-display uppercase leading-[0.8] hover:text-orange-600 hover:translate-x-4 transition-all duration-300 menu-link opacity-50 hover:opacity-100">
                        About
                    </a>
                    <a href="#" class="text-6xl md:text-[8rem] font-display uppercase leading-[0.8] hover:text-orange-600 hover:translate-x-4 transition-all duration-300 menu-link opacity-50 hover:opacity-100">
                        Manifesto
                    </a>
                </nav>

                <!-- Categories & Meta -->
                <div class="w-full md:w-1/3 flex flex-col">
                    <div class="flex-1 p-12 border-b border-white">
                        <h3 class="font-mono text-xs uppercase tracking-widest mb-8 text-orange-600">// Categories</h3>
                        <ul class="space-y-4 font-display text-3xl uppercase">
                            <li><a href="#" class="hover:underline decoration-2 decoration-orange-600 underline-offset-4">Visual AI</a></li>
                            <li><a href="#" class="hover:underline decoration-2 decoration-orange-600 underline-offset-4">LLM Prompting</a></li>
                            <li><a href="#" class="hover:underline decoration-2 decoration-orange-600 underline-offset-4">Vibe Coding</a></li>
                            <li><a href="#" class="hover:underline decoration-2 decoration-orange-600 underline-offset-4">Hardware</a></li>
                            <li><a href="#" class="hover:underline decoration-2 decoration-orange-600 underline-offset-4">Ethics</a></li>
                        </ul>
                    </div>
                    <div class="p-12 flex flex-col justify-end">
                        <h3 class="font-mono text-xs uppercase tracking-widest mb-4 text-orange-600">// Connect</h3>
                        <div class="flex flex-col gap-2 font-mono text-sm uppercase">
                            <a href="#" class="hover:text-orange-600">Instagram -></a>
                            <a href="#" class="hover:text-orange-600">Twitter / X -></a>
                            <a href="#" class="hover:text-orange-600">GitHub -></a>
                            <a href="#" class="hover:text-orange-600">Newsletter -></a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Menu Footer -->
            <div class="h-12 border-t border-white flex justify-between items-center px-6 md:px-12 font-mono text-[10px] uppercase">
                <span>CHIAMAMIAL GUIDE © 2026</span>
                <span class="text-orange-600 animate-pulse">● SYSTEM STATUS: ONLINE</span>
            </div>
        </div>

        <!-- Main Content -->
		<div class="flex-1 md:ml-24 w-full min-h-screen">
            <slot />
        </div>
        
        <script>
            // Menu Logic
            const menu = document.getElementById('fullscreen-menu');
            const openBtns = [document.getElementById('menu-toggle-desktop'), document.getElementById('menu-toggle-mobile')];
            const closeBtn = document.getElementById('menu-close');
            const links = document.querySelectorAll('.menu-link');

            function toggleMenu() {
                menu?.classList.toggle('translate-x-full');
                document.body.classList.toggle('overflow-hidden');
            }

            openBtns.forEach(btn => btn?.addEventListener('click', toggleMenu));
            closeBtn?.addEventListener('click', toggleMenu);
            
            // Close on link click
            links.forEach(link => {
                link.addEventListener('click', () => {
                     menu?.classList.add('translate-x-full');
                     document.body.classList.remove('overflow-hidden');
                });
            });
        </script>
        
        <style>
            .writing-vertical {
                writing-mode: vertical-rl;
            }
        </style>
	</body>
</html>
